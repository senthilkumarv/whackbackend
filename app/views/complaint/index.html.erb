<%if current_user %>
<h1>Complaint details</h1>
<table>
  <tr>
    <th>Complaint ID</th>
    <th>Mobile</th>
    <th>Name</th>
    <th>Location</th>
    <th>Type</th>
    <th>Status</th>
  </tr>

  <% @complaints.each do |c| %>
  <tr>
    <td> <%= c.reference_id %> </td>
    <td> <%= c.mobile %> </td>
    <td> <%= c.name %> </td>
    <td> <%= c.location %> </td>
    <td> <%= c.complaint_type %> </td>
    <td> <%= c.status %> </td>
    <td> <%= link_to 'Show', c %></td>
  </tr>
  <% end %>
  </table>
<p>

</p>
<% end %>
