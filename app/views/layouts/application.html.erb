<!DOCTYPE html>
<html>
  <head>
    <title>WaProSol - Water + Problem + Solution</title>
    <%= stylesheet_link_tag :all %>
	<%= auto_discovery_link_tag(:rss, complaints_path(:rss)) %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
  </head>
  <body>
	<!--
    <div id="user_nav">
      <% if current_user %>
        Logged in as <%= current_user.email %>.
        <%= link_to "Log out", logout_path %>
      <% else %>
        <%= link_to "Log in", login_path %>
      <% end %>
    </div>
	-->
	
	<div id="header">
      <div id="logo">
		<h1><%= link_to "WaProSol", new_complaint_path %></h1>
      </div>
      <div id="top_links_container">
        <% if current_user %>
          Logged in as <%= current_user.email %> |
          <%= link_to "Logout", logout_path %>
        <% else %>
          <%= link_to "Login", login_path %>
        <% end %>
      </div>
    </div>

    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
    <% end %>

    <%= yield %>

  </body>
</html>
